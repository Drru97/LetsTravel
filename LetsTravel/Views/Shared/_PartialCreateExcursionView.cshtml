
@model LetsTravel.Models.ExcursionCreationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href="~/Styles/bootstrap.css" rel="stylesheet" />

    <link href="~/Styles/stylesForForm.css" rel="stylesheet" />
    <meta charset="UTF-8">

    <title>Create excursion</title>

</head>

<body>
    <div class="modal-body">

        <h3>Please enter information about excursion!</h3>
        @Html.ValidationSummary()
        @using (Html.BeginForm("CreateExcursion", "Guide", FormMethod.Post))
        {
            <div class="form-group">
                @Html.TextBoxFor(x => x.Description, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Description) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.City, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.City) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Date, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Date) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Duration, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Duration) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Route, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Route) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.PeopleLimit, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.PeopleLimit) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Price, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Price) })
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" id="approve-btn" class="btn btn-danger">Save</button>
                </div>
            </div>
        }
    </div>


    <script type="text/javascript">
        $(function () {
            $('#approve-btn').click(function () {
                $('#modal-container').modal('hide');
            });
        });
    </script>
</body>
</html>