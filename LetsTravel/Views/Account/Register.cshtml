@model LetsTravel.Models.RegisterModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

    <link href="~/Styles/loginFormStyles.css" rel="stylesheet" />
    <meta charset="UTF-8">

    <title>Register</title>

</head>

<body>

    <div class="login-block">
        <h3>Please enter your information!</h3>
        @Html.ValidationSummary()
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextBoxFor(x => x.Nickname, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Nickname) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Email) })
            </div>
            <div class="form-group">
                @Html.PasswordFor(x => x.Password, new { @id = "password", placeholder = Html.DisplayNameFor(n => n.Password) })
            </div>         
            <div class ="form-group">
                @{
                    var listItems = new List<string> {"Guide", "Traveller"};
                    @Html.DropDownListFor(model => model.Role, new SelectList(listItems), "Select Role", new {@class = "dropdown"})
                }
            </div>

        <button type="submit">Register!</button>
        }
    </div>
</body>

</html>