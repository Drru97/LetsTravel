@model IEnumerable<Domain.Entities.Excursion>

@{
    Layout = null;
}
<!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>AllExcursions</title>
    </head>
    <body>
        <h2>All Excursions</h2>
        @foreach (var excursion in Model)
        {
            <h2>Excursion @excursion.ExcursionId </h2>
            <div class="list-group">
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">@excursion.City</h4>
                    <p class="list-group-item-text">@excursion.Date.ToShortDateString()</p>
                    <p class="list-group-item-text">@excursion.Description</p>
                    <p class="list-group-item-text">@excursion.Duration</p>
                    <p class="list-group-item-text">@excursion.Mark</p>
                    <p class="list-group-item-text">@excursion.PeopleLimit</p>
                    <p class="list-group-item-text">@excursion.Price</p>
                    <p class="list-group-item-text">@excursion.Route</p>
                </a>
            </div>

        }
    </body>
</html>
